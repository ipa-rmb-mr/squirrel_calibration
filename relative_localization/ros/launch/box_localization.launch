<?xml version="1.0"?>

<launch>

	<arg name="robot" default="robotino"/>		<!-- robotino, cob or RAW -->

	<node ns="box_localization" name="relative_localization" pkg="relative_localization" type="relative_localization_node" output="screen">
		<rosparam command="load" file="$(find relative_localization)/ros/launch/box_localization_params_$(arg robot).yaml"/>
		<param name="localization_method" value="box" />
	</node>
</launch>
